
@model IEnumerable<BigSchool.Models.Course>

@{
    ViewBag.Title = "LectureIamGoing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LectureIamGoing</h2>

<div class="row">
    <ul class="course">
        @foreach(var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.Datetime.ToString("MM")
                        </div>
                        <div class="day">
                            @course.Datetime.ToString("dd")
                        </div>
                        <div class="details">
                            <spna class="lecture" style="color:black">@course.LectureName</spna>
                            <br />
                            <span class="category" style="color:black">@course.Category.Name</span>
                        </div>

                    </div>
                </li>
            }

    </ul>

</div>

